<form action="/recipes/<%= @recipe.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">

<label name="name">Name:
  <input id="name" type="text" value="<%= @recipe.name %>" name="name">
</label>

<label name="ingredients">Ingredients:
  <input id="ingredients" type="text" value="<%= @recipe.ingredients %>" name="ingredients">
</label>

<label name="cook_time">Cook Time:
  <input id="cook_time" type="text" value="<%= @recipe.cook_time %>" name="cook_time">
</label>

<input type="submit" value="submit">
</form>
